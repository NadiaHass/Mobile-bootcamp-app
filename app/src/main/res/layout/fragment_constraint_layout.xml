<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.fragments.resultFragments.ConstraintLayoutFragment">

    <Button
        android:id="@+id/btn_0"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color1"
        android:text="0"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color1"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_0" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color1"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_5"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:text="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/color4"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:backgroundTint="@color/color5"
        app:layout_constraintBottom_toTopOf="@+id/btn_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_5" />
    <Button
        android:id="@+id/btn_6"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:text="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        android:backgroundTint="@color/color3"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/btn_3"
        app:layout_constraintRight_toLeftOf="@id/btn_3"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/color2"/>
    <Button
        android:id="@+id/btn_3"
        android:layout_width="56dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="3"
        android:backgroundTint="@color/color1"
        />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color3"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_11"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_11"
        android:layout_width="56dp"
        android:layout_height="40dp"

        android:backgroundTint="@color/color2"
        android:text="11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color5"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_5" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color5"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_8"
        app:layout_constraintTop_toBottomOf="@id/btn_5" />
</androidx.constraintlayout.widget.ConstraintLayout>